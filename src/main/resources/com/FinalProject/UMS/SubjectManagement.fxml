<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.FinalProject.UMS.SubjectManagementController">
    <VBox spacing="10" alignment="CENTER">
        <Label text="Subject Management" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <HBox spacing="10">
            <TextField fx:id="subjectNameField" promptText="Enter Subject Name"/>
            <TextField fx:id="subjectCodeField" promptText="Enter Subject Code"/>
            <Button text="Add Subject" onAction="#addSubject"/>
        </HBox>

        <HBox spacing="10">
            <TextField fx:id="searchField" promptText="Search by Name or Code"/>
            <Button text="Search" onAction="#searchSubject"/>
        </HBox>

        <TableView fx:id="subjectTable">
            <columns>
                <TableColumn fx:id="nameColumn" text="Subject Name"/>
                <TableColumn fx:id="codeColumn" text="Subject Code"/>
            </columns>
        </TableView>

        <Button text="Delete Selected" onAction="#deleteSubject"/>
    </VBox>
</AnchorPane>
