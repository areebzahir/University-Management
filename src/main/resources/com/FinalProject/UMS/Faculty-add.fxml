<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.FinalProject.UMS.FacultyController"
      spacing="10"
      style="-fx-padding: 20;">


    <Label text="Add New Faculty" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>


    <TextField fx:id="nameField" promptText="Name"/>
    <TextField fx:id="degreeField" promptText="Degree"/>
    <TextField fx:id="researchField" promptText="Research Interest"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <TextField fx:id="officeField" promptText="Office Location"/>
    <TextField fx:id="coursesField" promptText="Courses Offered"/>
    <TextField fx:id="passwordField" promptText="Password"/>


    <HBox spacing="10">
        <Button text="Save" onAction="#saveFaculty"/>
        <Button text="Cancel" onAction="#cancel"/>
    </HBox>
</VBox>




