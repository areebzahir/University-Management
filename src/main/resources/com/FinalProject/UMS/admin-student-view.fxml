<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.FinalProject.UMS.AdminStudentController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">

    <!-- Buttons for Student Management -->
    <Button text="Add Student" onAction="#handleAddStudent" />
    <Button text="Edit Student" onAction="#handleEditStudent" />
    <Button text="Delete Student" onAction="#handleDeleteStudent" />
    <Button text="View Student Profile" onAction="#handleViewStudentProfile" />
    <Button text="Manage Enrollments" onAction="#handleManageEnrollments" />
    <Button text="Academic Progress Tracking" onAction="#handleAcademicProgressTracking" />
    <Button text="Tuition Management" onAction="#handleTuitionManagement" />

    <!-- Back Button -->
    <Button fx:id="backButton" text="Back to Main Menu" onAction="#handleBackButton" />

</VBox>
