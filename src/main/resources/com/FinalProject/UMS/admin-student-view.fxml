<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.FinalProject.UMS.AdminStudentController"
      spacing="15"
      style="-fx-background-color: #f4f4f4;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header -->
    <Text text="Student Management System - Admin Dashboard"
          style="-fx-fill: #2c3e50; -fx-font-weight: bold;">
        <font>
            <Font name="Arial" size="24" />
        </font>
    </Text>

    <!-- Navigation Buttons Section -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-padding: 15;">
        <Label text="Student Management Actions:" style="-fx-font-weight: bold; -fx-font-size: 16;"/>

        <HBox spacing="15" alignment="CENTER">
            <Button text="Add Student" onAction="#handleAddStudent"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 5;"/>

            <Button text="View Profile" onAction="#handleViewStudentProfile"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 5;"/>
        </HBox>

        <HBox spacing="15" alignment="CENTER">
            <Button text="Manage Enrollments" onAction="#handleManageEnrollments"
                    style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 5;"/>

            <Button text="Academic Progress" onAction="#handleAcademicProgressTracking"
                    style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 5;"/>
        </HBox>

        <HBox spacing="15" alignment="CENTER">
            <Button text="Tuition Management" onAction="#handleTuitionManagement"
                    style="-fx-background-color: #607D8B; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 5;"/>

            <Button fx:id="backButton" text="Back to Main Menu" onAction="#handleBackButton"
                    style="-fx-background-color: #555555; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 5;"/>
        </HBox>
    </VBox>

    <!-- Quick Stats Section -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-padding: 15;">
        <Label text="Quick Statistics:" style="-fx-font-weight: bold; -fx-font-size: 16;"/>

        <HBox spacing="30" alignment="CENTER">
            <VBox alignment="CENTER" spacing="5">
                <Label text="Total Students" style="-fx-font-weight: bold;"/>
                <Label text="1,24" style="-fx-font-size: 24; -fx-text-fill: #2c3e50;"/>
            </VBox>

            <VBox alignment="CENTER" spacing="5">
                <Label text="Active Enrollments" style="-fx-font-weight: bold;"/>
                <Label text="100" style="-fx-font-size: 24; -fx-text-fill: #27ae60;"/>
            </VBox>

            <VBox alignment="CENTER" spacing="5">
                <Label text="Pending Actions" style="-fx-font-weight: bold;"/>
                <Label text="18" style="-fx-font-size: 24; -fx-text-fill: #e74c3c;"/>
            </VBox>
        </HBox>
    </VBox>
</VBox>