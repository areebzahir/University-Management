<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.effect.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.FinalProject.UMS.MenuController"
            style="-fx-background-color: white;">

    <left>
        <VBox prefWidth="280.0" style="-fx-background-color: linear-gradient(to bottom, #9B001C, #4d000e);">
            <effect>
                <DropShadow color="#00000080" radius="10" spread="0.1"/>
            </effect>

            <!-- Header Logo Area -->
            <VBox alignment="CENTER" spacing="15" style="-fx-padding: 25;">
                <Circle radius="40" style="-fx-fill: #F2BA30;">
                    <effect>
                        <InnerShadow/>
                    </effect>
                </Circle>
                <Label text="UMS Dashboard"
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #F2BA30;"/>
                <Separator style="-fx-background-color: #F2BA30; -fx-opacity: 0.3;"/>
            </VBox>

            <!-- Menu Items -->
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-padding: 0;">
                <VBox spacing="5" style="-fx-padding: 10 20 20 20;">

                    <!-- Dashboard Section -->
                    <VBox spacing="5" styleClass="menu-section">
                        <Label text="Dashboard"
                               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #F2BA30;"/>
                        <Button text="View Dashboard" onAction="#handleDashboard"
                                style="-fx-background-color: rgba(242, 186, 48, 0.2);
                                       -fx-text-fill: #F2BA30;
                                       -fx-font-size: 14px;
                                       -fx-padding: 12;
                                       -fx-background-radius: 8;
                                       -fx-border-color: #F2BA30;
                                       -fx-border-radius: 8;
                                       -fx-cursor: hand;"/>
                    </VBox>

                    <!-- Subject Management -->
                    <VBox spacing="5" styleClass="menu-section">
                        <Label text="Subject Management"
                               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #F2BA30;"/>
                        <Button fx:id="subjectManagementButton" text="Manage Subjects"
                                onAction="#handleSubjectManagement"
                                style="-fx-background-color: rgba(242, 186, 48, 0.2);
                                       -fx-text-fill: #F2BA30;
                                       -fx-padding: 12;
                                       -fx-background-radius: 8;
                                       -fx-border-color: #F2BA30;
                                       -fx-border-radius: 8;
                                       -fx-cursor: hand;"/>
                    </VBox>

                    <!-- Course Management -->
                    <VBox spacing="5" styleClass="menu-section">
                        <Label text="Course Management"
                               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #F2BA30;"/>
                        <Button fx:id="courseManagementButton" text="Manage Courses"
                                onAction="#handleCourseManagement"
                                style="-fx-background-color: rgba(242, 186, 48, 0.2);
                                       -fx-text-fill: #F2BA30;
                                       -fx-padding: 12;
                                       -fx-background-radius: 8;
                                       -fx-border-color: #F2BA30;
                                       -fx-border-radius: 8;
                                       -fx-cursor: hand;"/>
                    </VBox>

                    <!-- Student Management -->
                    <VBox spacing="5" styleClass="menu-section">
                        <Label text="Student Management"
                               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #F2BA30;"/>
                        <Button fx:id="studentManagementButton" text="Manage Students"
                                onAction="#handleStudentManage"
                                style="-fx-background-color: rgba(242, 186, 48, 0.2);
                                       -fx-text-fill: #F2BA30;
                                       -fx-padding: 12;
                                       -fx-background-radius: 8;
                                       -fx-border-color: #F2BA30;
                                       -fx-border-radius: 8;
                                       -fx-cursor: hand;"/>
                    </VBox>

                    <!-- Faculty Management -->
                    <VBox spacing="5" styleClass="menu-section">
                        <Label text="Faculty Management"
                               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #F2BA30;"/>
                        <VBox spacing="5">
                            <Button fx:id="facultyManagementButton" text="Manage Faculty"
                                    onAction="#handleFacultyManagement"
                                    style="-fx-background-color: rgba(242, 186, 48, 0.2);
                                           -fx-text-fill: #F2BA30;
                                           -fx-padding: 12;
                                           -fx-background-radius: 8;
                                           -fx-border-color: #F2BA30;
                                           -fx-border-radius: 8;
                                           -fx-cursor: hand;"/>
                            <Button text="Assign Courses"
                                    onAction="#handleAssignFacultyCourses"
                                    style="-fx-background-color: rgba(242, 186, 48, 0.2);
                                           -fx-text-fill: #F2BA30;
                                           -fx-padding: 12;
                                           -fx-background-radius: 8;
                                           -fx-border-color: #F2BA30;
                                           -fx-border-radius: 8;
                                           -fx-cursor: hand;"/>
                        </VBox>
                    </VBox>

                    <!-- Event Management -->
                    <VBox spacing="5" styleClass="menu-section">
                        <Label text="Event Management"
                               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #F2BA30;"/>
                        <Button fx:id="eventManagementButton" text="Manage Events"
                                onAction="#handleEventManagement"
                                style="-fx-background-color: rgba(242, 186, 48, 0.2);
                                       -fx-text-fill: #F2BA30;
                                       -fx-padding: 12;
                                       -fx-background-radius: 8;
                                       -fx-border-color: #F2BA30;
                                       -fx-border-radius: 8;
                                       -fx-cursor: hand;"/>
                    </VBox>

                    <Separator style="-fx-background-color: #F2BA30; -fx-opacity: 0.3;"/>

                    <!-- Profile and Logout -->
                    <VBox spacing="5" styleClass="menu-section">
                        <Button text="View Profile"
                                onAction="#handleViewProfile"
                                style="-fx-background-color: rgba(242, 186, 48, 0.2);
                                       -fx-text-fill: #F2BA30;
                                       -fx-padding: 12;
                                       -fx-background-radius: 8;
                                       -fx-border-color: #F2BA30;
                                       -fx-border-radius: 8;
                                       -fx-cursor: hand;"/>
                        <Button text="Logout"
                                onAction="#handleLogout"
                                style="-fx-background-color: rgba(255, 255, 255, 0.1);
                                       -fx-text-fill: #F2BA30;
                                       -fx-padding: 12;
                                       -fx-background-radius: 8;
                                       -fx-border-color: #F2BA30;
                                       -fx-border-radius: 8;
                                       -fx-cursor: hand;"/>
                    </VBox>
                </VBox>
            </ScrollPane>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <VBox style="-fx-background-color: #f8f9fa; -fx-padding: 20;">
            <!-- Dashboard Content -->
            <GridPane hgap="20" vgap="20">
                <!-- Statistics Cards -->
                <VBox GridPane.columnIndex="0" GridPane.rowIndex="0"
                      style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                    <effect>
                        <DropShadow color="#00000022" radius="10" spread="0.1"/>
                    </effect>
                    <Label text="Total Students" style="-fx-font-size: 18px; -fx-text-fill: #9B001C;"/>
                    <Label text="1,234" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #F2BA30;"/>
                </VBox>

                <VBox GridPane.columnIndex="1" GridPane.rowIndex="0"
                      style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                    <effect>
                        <DropShadow color="#00000022" radius="10" spread="0.1"/>
                    </effect>
                    <Label text="Total Courses" style="-fx-font-size: 18px; -fx-text-fill: #9B001C;"/>
                    <Label text="48" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #F2BA30;"/>
                </VBox>

                <VBox GridPane.columnIndex="2" GridPane.rowIndex="0"
                      style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                    <effect>
                        <DropShadow color="#00000022" radius="10" spread="0.1"/>
                    </effect>
                    <Label text="Total Faculty" style="-fx-font-size: 18px; -fx-text-fill: #9B001C;"/>
                    <Label text="56" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #F2BA30;"/>
                </VBox>

                <!-- Recent Activities Section -->
                <VBox GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="3"
                      style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                    <effect>
                        <DropShadow color="#00000022" radius="10" spread="0.1"/>
                    </effect>
                    <Label text="Recent Activities"
                           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #9B001C;"/>
                    <ListView VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;"/>
                </VBox>
            </GridPane>
        </VBox>
    </center>

</BorderPane>
