<?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.geometry.Insets?>
        <?import javafx.scene.control.*?>
        <?import javafx.scene.layout.*?>
        <?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.FinalProject.UMS.MenuController"
            prefHeight="600.0" prefWidth="800.0">

    <left>
        <!-- Increase the width here -->
        <ScrollPane prefWidth="250.0" style="-fx-background-color: #e9ecef;">
            <content>
                <VBox fx:id="menuVBox" alignment="TOP_LEFT" spacing="10.0" style="-fx-background-color: #f8f9fa;">
                    <padding>
                        <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
                    </padding>
                    <children>
                        <Label text="University Management System" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #343a40;">
                            <font>
                                <Font size="16.0"/>
                            </font>
                        </Label>

                        <Separator prefWidth="250.0"/>

                        <Label text="Dashboard" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057; -fx-padding: 5px 0 0 0;"/>
                        <Button text="View Dashboard" onAction="#handleDashboard" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5px 10px; -fx-border-radius: 5px; -fx-cursor: hand;"/>

                        <Separator prefWidth="250.0"/>

                        <Label text="Subject Management" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057; -fx-padding: 5px 0 0 0;"/>
                        <Button fx:id="subjectManagementButton" text="Manage Subjects" onAction="#handleSubjectManagement" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5px 10px; -fx-border-radius: 5px; -fx-cursor: hand;"/>

                        <Separator prefWidth="250.0"/>

                        <Label text="Course Management" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057; -fx-padding: 5px 0 0 0;"/>
                        <Button fx:id="courseManagementButton" text="Manage Courses" onAction="#handleCourseManagement" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5px 10px; -fx-border-radius: 5px; -fx-cursor: hand;"/>
                        <Button text="Add Course" onAction="#handleAddCourse" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5px 10px; -fx-border-radius: 5px; -fx-cursor: hand;"/>
                        <Button text="Edit Course" onAction="#handleEditCourse" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5px 10px; -fx-border-radius: 5px; -fx-cursor: hand;"/>
                        <Button text="Delete Course" onAction="#handleDeleteCourse" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5px 10px; -fx-border-radius: 5px; -fx-cursor: hand;"/>
                        <Button text="View Course" onAction="#handleViewCourse" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5px 10px; -fx-border-radius: 5px; -fx-cursor: hand;"/>
                        <Button text="Assign Faculty" onAction="#handleAssignFacultyCourses" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5px 10px; -fx-border-radius: 5px; -fx-cursor: hand;"/>
                        <Button text="Manage Enrollments" onAction="#handleManageEnrollments" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5px 10px; -fx-border-radius: 5px; -fx-cursor: hand;"/>

                        <Separator prefWidth="250.0"/>

                        <Label text="Student Management" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057; -fx-padding: 5px 0 0 0;"/>
                        <Button fx:id="studentManagementButton" text="Manage Students" onAction="#handleStudentManage" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5px 10px; -fx-border-radius: 5px; -fx-cursor: hand;"/>

                        <Separator prefWidth="250.0"/>

                        <Label text="Faculty Management" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057; -fx-padding: 5px 0 0 0;"/>
                        <Button fx:id="facultyManagementButton" text="Manage Faculty" onAction="#handleFacultyManagement" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5px 10px; -fx-border-radius: 5px; -fx-cursor: hand;"/>
                        <Button text="Assign Courses" onAction="#handleAssignFacultyCourses" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5px 10px; -fx-border-radius: 5px; -fx-cursor: hand;"/>

                        <Separator prefWidth="250.0"/>

                        <Label text="Event Management" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057; -fx-padding: 5px 0 0 0;"/>
                        <Button fx:id="eventManagementButton" text="Manage Events" onAction="#handleEventManagement" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5px 10px; -fx-border-radius: 5px; -fx-cursor: hand;"/>

                        <Separator prefWidth="250.0"/>

                        <Button text="View Profile" onAction="#handleViewProfile" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5px 10px; -fx-border-radius: 5px; -fx-cursor: hand;"/>
                        <Button text="Logout" onAction="#handleLogout" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5px 10px; -fx-border-radius: 5px; -fx-cursor: hand;"/>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </left>


</BorderPane>
