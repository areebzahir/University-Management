<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.FinalProject.UMS.ChatBotPopupController"
      style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 8;">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="UMS Assistant">
            <font>
                <Font name="Arial Bold" size="18"/>
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="closeButton" text="âœ–" onAction="#handleClose"
                style="-fx-background-color: transparent; -fx-text-fill: #7f8c8d; -fx-font-size: 20;">
            <font>
                <Font name="Arial" size="20"/>
            </font>
        </Button>
    </HBox>

    <ListView fx:id="chatDisplay" VBox.vgrow="ALWAYS" style="-fx-background-color: #ffffff; -fx-border-radius: 8; -fx-padding: 5;"/>

    <HBox spacing="10" alignment="CENTER">
        <TextArea fx:id="userInput" HBox.hgrow="ALWAYS" prefRowCount="3" wrapText="true"
                  promptText="Type your message here..."
                  style="-fx-background-color: #ffffff; -fx-border-color: #95a5a6; -fx-border-radius: 5; -fx-padding: 7;">
            <font>
                <Font name="Arial" size="14"/>
            </font>
        </TextArea>
        <Button fx:id="sendButton" text="Send" onAction="#handleSendMessage"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 15;">
            <font>
                <Font name="Arial Bold" size="14"/>
            </font>
        </Button>
    </HBox>

    <ProgressIndicator fx:id="progressIndicator" visible="false" maxWidth="25" maxHeight="25"/>
</VBox>
