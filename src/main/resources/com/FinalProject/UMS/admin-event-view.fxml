<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.FinalProject.UMS.EventAdminController">
    <Text text="Admin View - Event Management">
        <font>
            <Font name="Arial" size="24" />
        </font>
    </Text>
    <TextField fx:id="eventCodeField" promptText="Event Code" />
    <TextField fx:id="eventTitle" promptText="Event Title" />
    <TextField fx:id="eventDescription" promptText="Event Description" />
    <TextField fx:id="eventDate" promptText="Event Date" />
    <TextField fx:id="eventLocation" promptText="Event Location" />
    <TextField fx:id="eventImageUrl" promptText="Event Image URL" />
    <TextField fx:id="eventCapacity" promptText="Event Capacity" />
    <TextField fx:id="eventCost" promptText="Event Cost" />
    <Button fx:id="addEventButton" text="Add Event" onAction="#addEvent" />
    <ListView fx:id="eventListView" prefWidth="400" prefHeight="200" />
    <Button fx:id="returnButton" text="Return to Main Menu" onAction="#onReturnButtonClick" />
</VBox>