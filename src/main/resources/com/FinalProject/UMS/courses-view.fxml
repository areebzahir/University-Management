<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.FinalProject.UMS.CoursesController"
            prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f4f4f4;">
    <children>
        <VBox alignment="CENTER" spacing="10.0" AnchorPane.topAnchor="10.0" AnchorPane.bottomAnchor="10.0"
              AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
            <!-- Header -->
            <Label text="Enrolled Courses" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                <font>
                    <Font name="System Bold" size="24" />
                </font>
            </Label>

            <!-- TableView for Enrolled Courses -->
            <TableView fx:id="coursesTable" prefHeight="300.0" prefWidth="550.0" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-width: 1;">
                <columns>
                    <TableColumn fx:id="studentIdColumn" text="Student ID" prefWidth="100">
                        <cellValueFactory>
                            <PropertyValueFactory property="studentId" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="courseCodeColumn" text="Course Code" prefWidth="100">
                        <cellValueFactory>
                            <PropertyValueFactory property="courseCode" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="courseNameColumn" text="Course Name" prefWidth="200">
                        <cellValueFactory>
                            <PropertyValueFactory property="courseName" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="semesterColumn" text="Semester" prefWidth="150">
                        <cellValueFactory>
                            <PropertyValueFactory property="semester" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="academicLevelColumn" text="Academic Level" prefWidth="150">
                        <cellValueFactory>
                            <PropertyValueFactory property="academicLevel" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="currentSemesterColumn" text="Current Semester" prefWidth="150">
                        <cellValueFactory>
                            <PropertyValueFactory property="currentSemester" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>

            <!-- Return Button -->
            <Button text="Return to Previous Page" onAction="#onReturnButtonClick" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;">
                <padding>
                    <Insets top="5.0" bottom="5.0" left="10.0" right="10.0" />
                </padding>
            </Button>
        </VBox>
    </children>
</AnchorPane>