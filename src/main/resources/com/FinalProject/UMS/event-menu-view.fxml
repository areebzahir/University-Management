<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.FinalProject.UMS.EventMenuController" prefWidth="800" prefHeight="600" style="-fx-background-color: #f8f9fa;">
    <VBox spacing="30" alignment="CENTER" prefWidth="760.0" AnchorPane.topAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- Header with Title -->
        <HBox alignment="CENTER" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 15;">
            <effect>
                <DropShadow color="#00000033" radius="15" spread="0.1"/>
            </effect>
            <Circle radius="40" style="-fx-fill: #9B001C;">
                <effect>
                    <InnerShadow/>
                </effect>
            </Circle>
            <Label text="Event Management System" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #9B001C; -fx-padding: 0 0 0 15;"/>
        </HBox>

        <!-- Main Content Area -->
        <VBox spacing="20" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 15;" VBox.vgrow="ALWAYS">
            <effect>
                <DropShadow color="#00000033" radius="15" spread="0.1"/>
            </effect>

            <Text text="Welcome to the Event Management Portal" style="-fx-fill: #9B001C; -fx-font-size: 22px; -fx-font-weight: bold;">
                <font>
                    <Font name="System Bold" size="22" />
                </font>
            </Text>

            <Text text="Please select your role to continue" style="-fx-fill: #666666; -fx-font-size: 16px;">
                <font>
                    <Font name="System" size="16" />
                </font>
            </Text>

            <!-- Buttons with enhanced styling -->
            <VBox alignment="CENTER" spacing="20" VBox.vgrow="ALWAYS" style="-fx-padding: 20 0;">
                <Button fx:id="adminButton" text="Admin" onAction="#onAdminButtonClick"
                        style="-fx-background-color: #9B001C;
                               -fx-text-fill: white;
                               -fx-font-size: 18;
                               -fx-font-weight: bold;
                               -fx-padding: 15 30;
                               -fx-background-radius: 8;
                               -fx-cursor: hand;
                               -fx-min-width: 300;">
                    <effect>
                        <DropShadow color="#00000040" radius="10" spread="0.05"/>
                    </effect>
                </Button>

                <Button fx:id="userButton" text="User" onAction="#onUserButtonClick"
                        style="-fx-background-color: #F2BA30;
                               -fx-text-fill: white;
                               -fx-font-size: 18;
                               -fx-font-weight: bold;
                               -fx-padding: 15 30;
                               -fx-background-radius: 8;
                               -fx-cursor: hand;
                               -fx-min-width: 300;">
                    <effect>
                        <DropShadow color="#00000040" radius="10" spread="0.05"/>
                    </effect>
                </Button>

                <Button fx:id="returnButton" text="Return" onAction="#handleBackButton"
                        style="-fx-background-color: rgba(155, 0, 28, 0.2);
                               -fx-text-fill: #9B001C;
                               -fx-font-size: 18;
                               -fx-font-weight: bold;
                               -fx-padding: 15 30;
                               -fx-background-radius: 8;
                               -fx-border-color: #9B001C;
                               -fx-border-radius: 8;
                               -fx-cursor: hand;
                               -fx-min-width: 300;">
                    <effect>
                        <DropShadow color="#00000040" radius="10" spread="0.05"/>
                    </effect>
                </Button>
            </VBox>

            <!-- Quick Info Section -->
            <HBox spacing="15" alignment="CENTER">
                <VBox alignment="CENTER" style="-fx-background-color: rgba(155, 0, 28, 0.1); -fx-padding: 15; -fx-background-radius: 10;" HBox.hgrow="ALWAYS">
                    <Label text="Upcoming Events" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #9B001C;"/>
                    <Label text="5" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #9B001C;"/>
                </VBox>

                <VBox alignment="CENTER" style="-fx-background-color: rgba(242, 186, 48, 0.1); -fx-padding: 15; -fx-background-radius: 10;" HBox.hgrow="ALWAYS">
                    <Label text="Active Users" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #F2BA30;"/>
                    <Label text="128" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #F2BA30;"/>
                </VBox>

                <VBox alignment="CENTER" style="-fx-background-color: rgba(155, 0, 28, 0.1); -fx-padding: 15; -fx-background-radius: 10;" HBox.hgrow="ALWAYS">
                    <Label text="Total Events" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #9B001C;"/>
                    <Label text="42" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #9B001C;"/>
                </VBox>
            </HBox>
        </VBox>

        <!-- Footer -->
        <HBox alignment="CENTER" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
            <effect>
                <DropShadow color="#00000033" radius="10" spread="0.05"/>
            </effect>
            <Label text="© 2025 Event Management System • All Rights Reserved" style="-fx-text-fill: #666666; -fx-font-size: 14px;"/>
        </HBox>
    </VBox>
</AnchorPane>