<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.FinalProject.UMS.EventUserController" prefWidth="900" prefHeight="650" style="-fx-background-color: #f8f9fa;">
    <VBox spacing="25" alignment="CENTER" AnchorPane.topAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- Header with Title -->
        <HBox alignment="CENTER" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 15;">
            <effect>
                <DropShadow color="#00000033" radius="15" spread="0.1"/>
            </effect>
            <Circle radius="35" style="-fx-fill: #9B001C;">
                <effect>
                    <InnerShadow/>
                </effect>
            </Circle>
            <Label text="Event Registration System" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #9B001C; -fx-padding: 0 0 0 15;"/>
        </HBox>

        <!-- Main Content Area -->
        <VBox spacing="20" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 15;" VBox.vgrow="ALWAYS">
            <effect>
                <DropShadow color="#00000033" radius="15" spread="0.1"/>
            </effect>

            <!-- Filter Buttons -->
            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="allEventsButton" text="All Events" onAction="#showAllEvents"
                        style="-fx-background-color: #9B001C;
                               -fx-text-fill: white;
                               -fx-font-size: 14;
                               -fx-font-weight: bold;
                               -fx-padding: 10 20;
                               -fx-background-radius: 5;
                               -fx-cursor: hand;">
                    <effect>
                        <DropShadow color="#00000040" radius="5" spread="0.05"/>
                    </effect>
                </Button>

                <Button fx:id="myEventsButton" text="My Events" onAction="#showMyEvents"
                        style="-fx-background-color: #F2BA30;
                               -fx-text-fill: white;
                               -fx-font-size: 14;
                               -fx-font-weight: bold;
                               -fx-padding: 10 20;
                               -fx-background-radius: 5;
                               -fx-cursor: hand;">
                    <effect>
                        <DropShadow color="#00000040" radius="5" spread="0.05"/>
                    </effect>
                </Button>
            </HBox>

            <!-- TableView for Events - Preserved from original -->
            <TableView fx:id="eventTableView" prefWidth="800" prefHeight="300" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                <effect>
                    <DropShadow color="#00000022" radius="5" spread="0.05"/>
                </effect>
                <columns>
                    <TableColumn fx:id="eventCodeColumn" text="Event Code" prefWidth="100" />
                    <TableColumn fx:id="eventNameColumn" text="Event Name" prefWidth="150" />
                    <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="200" />
                    <TableColumn fx:id="locationColumn" text="Location" prefWidth="120" />
                    <TableColumn fx:id="dateColumn" text="Date and Time" prefWidth="150" />
                    <TableColumn fx:id="capacityColumn" text="Capacity" prefWidth="80" />
                </columns>
                <placeholder>
                    <Label text="No events available. Check back later or change your filter." style="-fx-text-fill: #666666;"/>
                </placeholder>
            </TableView>

            <!-- Action Buttons -->
            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="registerButton" text="Register for Event" onAction="#registerForEvent"
                        style="-fx-background-color: #9B001C;
                               -fx-text-fill: white;
                               -fx-font-size: 14;
                               -fx-font-weight: bold;
                               -fx-padding: 12 25;
                               -fx-background-radius: 5;
                               -fx-cursor: hand;">
                    <effect>
                        <DropShadow color="#00000040" radius="5" spread="0.05"/>
                    </effect>
                </Button>

                <Button fx:id="calendarViewButton" text="Calendar View" onAction="#showCalendarView"
                        style="-fx-background-color: #F2BA30;
                               -fx-text-fill: white;
                               -fx-font-size: 14;
                               -fx-font-weight: bold;
                               -fx-padding: 12 25;
                               -fx-background-radius: 5;
                               -fx-cursor: hand;">
                    <effect>
                        <DropShadow color="#00000040" radius="5" spread="0.05"/>
                    </effect>
                </Button>

                <Button fx:id="returnButton" text="Return to Main Menu" onAction="#onReturnButtonClick"
                        style="-fx-background-color: rgba(155, 0, 28, 0.2);
                               -fx-text-fill: #9B001C;
                               -fx-font-size: 14;
                               -fx-font-weight: bold;
                               -fx-padding: 12 25;
                               -fx-background-radius: 5;
                               -fx-border-color: #9B001C;
                               -fx-border-radius: 5;
                               -fx-cursor: hand;">
                    <effect>
                        <DropShadow color="#00000040" radius="5" spread="0.05"/>
                    </effect>
                </Button>
            </HBox>
        </VBox>

        <!-- Footer -->
        <HBox alignment="CENTER" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
            <effect>
                <DropShadow color="#00000033" radius="10" spread="0.05"/>
            </effect>
            <Text text="Â© 2025 Event Management System" style="-fx-fill: #666666; -fx-font-size: 12px;">
                <font>
                    <Font name="Arial" />
                </font>
            </Text>
        </HBox>
    </VBox>
</AnchorPane>