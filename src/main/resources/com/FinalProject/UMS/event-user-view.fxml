<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.FinalProject.UMS.EventUserController">
    <Text text="User View - Event Registration">
        <font>
            <Font name="Arial" size="24" />
        </font>
    </Text>
    <ListView fx:id="eventListView" prefWidth="400" prefHeight="200" />
    <Button fx:id="registerButton" text="Register for Event" onAction="#registerForEvent" />
    <Button fx:id="returnButton" text="Return to Main Menu" onAction="#onReturnButtonClick" />
</VBox>