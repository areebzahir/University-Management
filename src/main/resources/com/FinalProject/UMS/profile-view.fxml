<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="768.0" prefWidth="1366.0" spacing="10.0"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.FinalProject.UMS.StudentManagementController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #008080;">
        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../../../icons/university_logo.png"/>
        </ImageView>
        <Label text="Student Management System" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../../../icons/notification_icon.png"/>
        </ImageView>
        <Label text="Admin" style="-fx-font-size: 14px; -fx-text-fill: white;"/>
    </HBox>

    <!-- Search and Add Section -->
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <TextField promptText="Search by name, ID, or email..." HBox.hgrow="ALWAYS"/>
        <Button text="+ Add Student" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>

    <!-- Table View -->
    <TableView fx:id="studentTable" prefHeight="500.0" HBox.hgrow="ALWAYS">
        <columns>
            <TableColumn text="Photo">
                <!-- Use a graphic cell factory for the image -->
            </TableColumn>
            <TableColumn fx:id="nameColumn" text="Name"/>
            <TableColumn fx:id="studentIdColumn" text="Student ID"/>
            <TableColumn fx:id="emailColumn" text="Email"/>
            <TableColumn fx:id="academicLevelColumn" text="Academic Level"/>
            <TableColumn fx:id="currentSemesterColumn" text="Current Semester"/>
            <TableColumn text="Progress">
                <!-- Placeholder for progress bar -->
            </TableColumn>
            <TableColumn text="Actions">
                <!-- Buttons for edit/delete -->
            </TableColumn>
        </columns>
    </TableView>

    <!-- Pagination Section -->
    <HBox alignment="CENTER" spacing="10.0">
        <Label text="Showing 1 to 3 of 100 results"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Previous"/>
        <HBox spacing="5.0">
            <Button text="1"/>
            <Button text="2"/>
            <Button text="3"/>
        </HBox>
        <Button text="Next"/>
    </HBox>
</VBox>