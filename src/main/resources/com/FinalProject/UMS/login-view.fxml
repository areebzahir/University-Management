<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.paint.Color?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="300.0" spacing="20.0"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.FinalProject.UMS.LoginController"
      style="-fx-background-color: #f0f8ff;">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="University Management System - Login">
        <font>
            <Font name="Arial Bold" size="18.0"/>
        </font>
        <textFill><Color/></textFill>
    </Label>

    <TextField fx:id="usernameField" promptText="Username"
               style="-fx-border-color: #a9a9a9; -fx-border-radius: 5; -fx-padding: 8;" />
    <PasswordField fx:id="passwordField" promptText="Password"
                   style="-fx-border-color: #a9a9a9; -fx-border-radius: 5; -fx-padding: 8;" />

    <Button onAction="#handleLogin" text="Login"
            style="-fx-background-color: #4682b4; -fx-text-fill: white; -fx-font-size: 14;
                   -fx-padding: 8 15; -fx-border-radius: 5; -fx-cursor: hand;" />

    <!-- Error message label -->
    <Label fx:id="errorMessageLabel" text="" textFill="RED" prefHeight="20"/>

</VBox>
