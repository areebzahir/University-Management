<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.paint.Color?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="350.0" spacing="15.0"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.FinalProject.UMS.LoginController"
      style="-fx-background-color: linear-gradient(to bottom, #f0f8ff, #cce7ff); -fx-padding: 25px; -fx-border-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 5);">

    <Label text="University Management System" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" />

    <TextField fx:id="usernameField" promptText="Username"
               style="-fx-border-color: #4682b4; -fx-border-radius: 8; -fx-padding: 10; -fx-font-size: 14px;" />

    <PasswordField fx:id="passwordField" promptText="Password"
                   style="-fx-border-color: #4682b4; -fx-border-radius: 8; -fx-padding: 10; -fx-font-size: 14px;" />

    <Button text="Login" onAction="#handleLogin"
            style="-fx-background-color: #4682b4; -fx-text-fill: white; -fx-font-size: 16px;
                   -fx-padding: 10 20; -fx-border-radius: 8; -fx-cursor: hand;" />

    <!-- Error message label -->
    <Label fx:id="errorMessageLabel" text="" textFill="RED" style="-fx-font-size: 14px;" />

</VBox>