<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.FinalProject.UMS.CalendarViewController"
            style="-fx-background-color: linear-gradient(to bottom, #f8f9fa, #e9ecef);"
            prefWidth="1000" prefHeight="700">

    <BorderPane AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0"
                AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">

        <!-- Header -->
        <top>
            <VBox spacing="2">
                <!-- University Banner -->
                <StackPane style="-fx-background-color: #9B001C; -fx-background-radius: 0 0 10 10;">
                    <effect>
                        <DropShadow color="#00000066" radius="5" spread="0.05"/>
                    </effect>
                    <HBox alignment="CENTER" spacing="5" style="-fx-padding: 3;">
                        <Circle radius="6" style="-fx-fill: #F2BA30;"/>
                        <Label text="UNIVERSITY MANAGEMENT SYSTEM" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 10;"/>
                        <Circle radius="6" style="-fx-fill: #F2BA30;"/>
                    </HBox>
                </StackPane>

                <!-- Main Header -->
                <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 8 15;">
                    <!-- Logo -->
                    <StackPane>
                        <Circle radius="20" style="-fx-fill: #9B001C;">
                            <effect>
                                <InnerShadow radius="5" choke="0.3"/>
                            </effect>
                        </Circle>
                        <Text text="ğŸ“…" style="-fx-font-size: 16;"/>
                        <Circle radius="24" style="-fx-fill: transparent; -fx-stroke: #F2BA30; -fx-stroke-width: 1.5; -fx-stroke-dash-array: 10 2; -fx-stroke-line-cap: round;">
                            <effect>
                                <Glow level="0.3"/>
                            </effect>
                        </Circle>
                    </StackPane>

                    <!-- Title -->
                    <VBox alignment="CENTER_LEFT" spacing="0">
                        <Label text="Event Calendar" style="-fx-text-fill: #9B001C; -fx-font-weight: bold;">
                            <font>
                                <Font name="Arial" size="18" />
                            </font>
                            <effect>
                                <DropShadow color="#00000033" radius="1" spread="0.1"/>
                            </effect>
                        </Label>
                        <Label text="View and manage your events" style="-fx-text-fill: #666666; -fx-font-style: italic; -fx-font-size: 12;"/>
                    </VBox>

                    <Region HBox.hgrow="ALWAYS"/>
                </HBox>

                <!-- Separator -->
                <Rectangle height="3" style="-fx-arc-width: 3; -fx-arc-height: 3;">
                    <fill>
                        <LinearGradient endX="1.0" endY="0.0">
                            <stops>
                                <Stop color="#F2BA3099"/>
                                <Stop color="#9B001C" offset="0.5"/>
                                <Stop color="#F2BA3099" offset="1.0"/>
                            </stops>
                        </LinearGradient>
                    </fill>
                </Rectangle>
            </VBox>
        </top>

        <!-- Main Content -->
        <center>
            <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent; -fx-padding: 0;">
                <VBox spacing="15" style="-fx-padding: 15;">
                    <!-- Month Navigation Card -->
                    <StackPane style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 10;">
                        <effect>
                            <DropShadow color="#00000022" radius="5" spread="0.05"/>
                        </effect>
                        <VBox spacing="10" alignment="CENTER">
                            <HBox alignment="CENTER" spacing="20">
                                <Button fx:id="prevMonthButton" text="â®" onAction="#previousMonth"
                                        style="-fx-background-color: #9B001C;
                                               -fx-text-fill: white;
                                               -fx-font-size: 16;
                                               -fx-font-weight: bold;
                                               -fx-padding: 5 15;
                                               -fx-background-radius: 20;
                                               -fx-cursor: hand;">
                                    <effect>
                                        <DropShadow color="#00000040" radius="3" spread="0.05"/>
                                    </effect>
                                </Button>

                                <Label fx:id="monthYearLabel" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                                    <effect>
                                        <DropShadow color="#00000033" radius="1" spread="0.1"/>
                                    </effect>
                                </Label>

                                <Button fx:id="nextMonthButton" text="â¯" onAction="#nextMonth"
                                        style="-fx-background-color: #9B001C;
                                               -fx-text-fill: white;
                                               -fx-font-size: 16;
                                               -fx-font-weight: bold;
                                               -fx-padding: 5 15;
                                               -fx-background-radius: 20;
                                               -fx-cursor: hand;">
                                    <effect>
                                        <DropShadow color="#00000040" radius="3" spread="0.05"/>
                                    </effect>
                                </Button>
                            </HBox>
                        </VBox>
                    </StackPane>

                    <!-- Calendar Card -->
                    <StackPane style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15;">
                        <effect>
                            <DropShadow color="#00000022" radius="5" spread="0.05"/>
                        </effect>
                        <VBox spacing="10">
                            <HBox alignment="CENTER_LEFT" spacing="8">
                                <StackPane>
                                    <Circle radius="12" style="-fx-fill: rgba(155, 0, 28, 0.2);"/>
                                    <Text text="ğŸ“†" style="-fx-font-size: 12;"/>
                                </StackPane>
                                <Label text="Monthly Calendar" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-size: 14;"/>
                            </HBox>

                            <Separator style="-fx-background-color: #e0e0e0;"/>

                            <!-- Calendar Grid -->
                            <VBox fx:id="calendarContainer" alignment="TOP_CENTER" spacing="10" style="-fx-padding: 10;">
                                <!-- Calendar grid will be generated here -->
                                <StackPane style="-fx-min-height: 300; -fx-background-color: #f8f9fa; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                                    <Label text="Calendar will be displayed here" style="-fx-text-fill: #95a5a6; -fx-font-style: italic;"/>
                                </StackPane>
                            </VBox>
                        </VBox>
                    </StackPane>

                    <!-- Events Table Card -->
                    <StackPane style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15;">
                        <effect>
                            <DropShadow color="#00000022" radius="5" spread="0.05"/>
                        </effect>
                        <VBox spacing="10">
                            <HBox alignment="CENTER_LEFT" spacing="8">
                                <StackPane>
                                    <Circle radius="12" style="-fx-fill: rgba(242, 186, 48, 0.2);"/>
                                    <Text text="ğŸ“‹" style="-fx-font-size: 12;"/>
                                </StackPane>
                                <Label text="Event Details" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-size: 14;"/>
                            </HBox>

                            <Separator style="-fx-background-color: #e0e0e0;"/>

                            <!-- Events Table -->
                            <TableView fx:id="eventsTable" prefHeight="200" prefWidth="600"
                                       style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-radius: 4; -fx-font-size: 11;">
                                <columns>
                                    <TableColumn text="Event Name" prefWidth="150">
                                        <cellValueFactory><PropertyValueFactory property="title"/></cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="Time" prefWidth="100">
                                        <cellValueFactory><PropertyValueFactory property="time"/></cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="Location" prefWidth="120">
                                        <cellValueFactory><PropertyValueFactory property="location"/></cellValueFactory>
                                    </TableColumn>
                                    <TableColumn text="Description" prefWidth="230">
                                        <cellValueFactory><PropertyValueFactory property="description"/></cellValueFactory>
                                    </TableColumn>
                                </columns>
                                <placeholder>
                                    <VBox alignment="CENTER" spacing="5">
                                        <Text text="ğŸ“­" style="-fx-font-size: 24; -fx-fill: #e0e0e0;"/>
                                        <Label text="No events available" style="-fx-text-fill: #95a5a6; -fx-font-size: 11;"/>
                                    </VBox>
                                </placeholder>
                                <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                </columnResizePolicy>
                            </TableView>
                        </VBox>
                    </StackPane>

                    <!-- Stats Cards -->
                    <HBox spacing="10">
                        <!-- Today's Events Card -->
                        <StackPane style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 8;" HBox.hgrow="ALWAYS">
                            <effect>
                                <DropShadow color="#00000022" radius="5" spread="0.05"/>
                            </effect>
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <StackPane>
                                    <Circle radius="18" style="-fx-fill: rgba(155, 0, 28, 0.15);"/>
                                    <Text text="ğŸ“…" style="-fx-font-size: 16;"/>
                                </StackPane>
                                <VBox spacing="2">
                                    <Label text="Today's Events" style="-fx-font-weight: bold; -fx-text-fill: #666666; -fx-font-size: 12;"/>
                                    <Label text="2 events scheduled" style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #9B001C;"/>
                                    <Label text="Next: Study Group at 3:00 PM" style="-fx-text-fill: #7f8c8d; -fx-font-size: 10;"/>
                                </VBox>
                            </HBox>
                        </StackPane>

                        <!-- Upcoming Events Card -->
                        <StackPane style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 8;" HBox.hgrow="ALWAYS">
                            <effect>
                                <DropShadow color="#00000022" radius="5" spread="0.05"/>
                            </effect>
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <StackPane>
                                    <Circle radius="18" style="-fx-fill: rgba(242, 186, 48, 0.15);"/>
                                    <Text text="ğŸ””" style="-fx-font-size: 16;"/>
                                </StackPane>
                                <VBox spacing="2">
                                    <Label text="Upcoming Events" style="-fx-font-weight: bold; -fx-text-fill: #666666; -fx-font-size: 12;"/>
                                    <Label text="5 events this week" style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #F2BA30;"/>
                                    <Label text="Most important: Final Exam on Friday" style="-fx-text-fill: #7f8c8d; -fx-font-size: 10;"/>
                                </VBox>
                            </HBox>
                        </StackPane>
                    </HBox>
                </VBox>
            </ScrollPane>
        </center>

        <!-- Footer -->
        <bottom>
            <VBox spacing="2">
                <!-- Separator -->
                <Rectangle height="3" style="-fx-arc-width: 3; -fx-arc-height: 3;">
                    <fill>
                        <LinearGradient endX="1.0" endY="0.0">
                            <stops>
                                <Stop color="#F2BA3099"/>
                                <Stop color="#9B001C" offset="0.5"/>
                                <Stop color="#F2BA3099" offset="1.0"/>
                            </stops>
                        </LinearGradient>
                    </fill>
                </Rectangle>

                <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 8 15;">
                    <HBox spacing="5" alignment="CENTER_LEFT">
                        <Text text="ğŸ•’" style="-fx-font-size: 10; -fx-fill: #95a5a6;"/>
                        <Label text="Last updated: Apr 3, 2025 12:23 AM" style="-fx-text-fill: #95a5a6; -fx-font-style: italic; -fx-font-size: 10;"/>
                    </HBox>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="returnButton" onAction="#returnToTableView"
                            style="-fx-background-color: #9B001C;
                                   -fx-text-fill: white;
                                   -fx-font-weight: bold;
                                   -fx-padding: 5 10;
                                   -fx-background-radius: 5;
                                   -fx-cursor: hand;
                                   -fx-font-size: 11;">
                        <graphic>
                            <Text text="ğŸ " style="-fx-font-size: 11;"/>
                        </graphic>
                        <text>Return</text>
                    </Button>
                </HBox>

                <!-- Copyright Footer -->
                <HBox alignment="CENTER" style="-fx-padding: 5; -fx-background-color: #9B001C;">
                    <HBox spacing="8" alignment="CENTER">
                        <Circle radius="4" style="-fx-fill: #F2BA30;"/>
                        <Label text="Â© 2025 Event Management System" style="-fx-text-fill: white; -fx-font-size: 10;"/>
                        <Circle radius="4" style="-fx-fill: #F2BA30;"/>
                    </HBox>
                </HBox>
            </VBox>
        </bottom>
    </BorderPane>
</AnchorPane>