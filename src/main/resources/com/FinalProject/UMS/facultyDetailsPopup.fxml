<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.FinalProject.UMS.FacultyDetailsController"
      spacing="10"
      style="-fx-padding: 20; -fx-background-color: #f8f9fa;">


    <Label fx:id="nameLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>


    <VBox spacing="5">
        <Label text="Research Interests:" style="-fx-font-weight: bold;"/>
        <Label fx:id="researchLabel" wrapText="true"/>
    </VBox>


    <VBox spacing="5">
        <Label text="Student Advising:" style="-fx-font-weight: bold;"/>
        <Label fx:id="advisingLabel" wrapText="true"/>
    </VBox>


    <Button text="Close" onAction="#handleClose" style="-fx-background-color: #dc3545; -fx-text-fill: white;"/>
</VBox>

