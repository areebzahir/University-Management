<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox fx:id="gradesContainer" spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.FinalProject.UMS.GradesController"
      style="-fx-background-color: linear-gradient(to bottom, #f8f9fa, #e9ecef);">
    <padding>
        <Insets top="15" right="20" bottom="15" left="20"/>
    </padding>

    <!-- Header -->
    <VBox spacing="10">
        <!-- Header with Logo -->
        <HBox alignment="CENTER_LEFT" spacing="15">
            <Circle radius="25" style="-fx-fill: #9B001C;">
                <effect>
                    <InnerShadow/>
                </effect>
            </Circle>
            <VBox alignment="CENTER_LEFT">
                <Label text="Academic Transcript" style="-fx-text-fill: #9B001C; -fx-font-weight: bold;">
                    <font>
                        <Font name="Arial" size="24" />
                    </font>
                </Label>
                <Label text="View your course grades and academic progress" style="-fx-text-fill: #666666; -fx-font-style: italic;">
                    <font>
                        <Font name="Arial" size="12" />
                    </font>
                </Label>
            </VBox>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="printButton" text="Print Transcript" onAction="#handlePrintButton"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 5; -fx-cursor: hand;">
                <graphic>
                    <Text text="ðŸ–¨ï¸" style="-fx-font-size: 12;"/>
                </graphic>
                <effect>
                    <DropShadow color="#00000040" radius="3" spread="0.03"/>
                </effect>
            </Button>
            <Button fx:id="returnButton" text="Return to Dashboard" onAction="#handleReturnButton"
                    style="-fx-background-color: #9B001C; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 5; -fx-cursor: hand;">
                <graphic>
                    <Text text="ðŸ " style="-fx-font-size: 12;"/>
                </graphic>
                <effect>
                    <DropShadow color="#00000040" radius="3" spread="0.03"/>
                </effect>
            </Button>
        </HBox>

        <!-- Separator -->
        <Rectangle height="3" style="-fx-fill: #F2BA30; -fx-opacity: 0.6; -fx-arc-width: 3; -fx-arc-height: 3;"/>
    </VBox>

    <!-- Term Selection Card -->
    <StackPane style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 10;">
        <effect>
            <DropShadow color="#00000022" radius="5" spread="0.03"/>
        </effect>
        <HBox spacing="20" alignment="CENTER_LEFT">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <StackPane>
                    <Circle radius="20" style="-fx-fill: rgba(52, 152, 219, 0.15);"/>
                    <Text text="ðŸ—“ï¸" style="-fx-font-size: 16;"/>
                </StackPane>
                <VBox spacing="5">
                    <Label text="Select Term:" style="-fx-font-weight: bold; -fx-text-fill: #666666; -fx-font-size: 12;"/>
                    <ComboBox fx:id="termComboBox" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-pref-width: 200; -fx-background-radius: 5; -fx-border-radius: 5;"/>
                </VBox>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <StackPane>
                    <Circle radius="20" style="-fx-fill: rgba(46, 204, 113, 0.15);"/>
                    <Text text="ðŸŽ“" style="-fx-font-size: 16;"/>
                </StackPane>
                <VBox spacing="5">
                    <Label text="Term Information" style="-fx-font-weight: bold; -fx-text-fill: #666666; -fx-font-size: 12;"/>
                    <Label fx:id="termDateLabel" text="January 15 - May 10, 2024" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d; -fx-font-size: 12;"/>
                    <Label fx:id="termGPALabel" text="Term GPA: 3.85" style="-fx-font-weight: bold; -fx-text-fill: #e74c3c; -fx-font-size: 14px;"/>
                </VBox>
            </HBox>
        </HBox>
    </StackPane>

    <!-- Course Grades Card -->
    <StackPane style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 10;" VBox.vgrow="ALWAYS">
        <effect>
            <DropShadow color="#00000022" radius="5" spread="0.03"/>
        </effect>
        <VBox spacing="8">
            <HBox alignment="CENTER_LEFT" spacing="8">
                <StackPane>
                    <Circle radius="15" style="-fx-fill: rgba(231, 76, 60, 0.15);"/>
                    <Text text="ðŸ“‹" style="-fx-font-size: 14;"/>
                </StackPane>
                <Label text="Course Grades" style="-fx-font-weight: bold; -fx-text-fill: #666666; -fx-font-size: 14;"/>
            </HBox>

            <TableView fx:id="gradesTable" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-font-size: 11; -fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </StackPane>

    <!-- Charts Section -->
    <HBox fx:id="chartContainer" spacing="15">
        <!-- Grade Distribution Chart -->
        <StackPane style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 10;" HBox.hgrow="ALWAYS">
            <effect>
                <DropShadow color="#00000022" radius="5" spread="0.03"/>
            </effect>
            <VBox spacing="5">
                <HBox alignment="CENTER_LEFT" spacing="8">
                    <StackPane>
                        <Circle radius="15" style="-fx-fill: rgba(52, 152, 219, 0.15);"/>
                        <Text text="ðŸ“Š" style="-fx-font-size: 14;"/>
                    </StackPane>
                    <Label text="Grade Distribution" style="-fx-font-weight: bold; -fx-text-fill: #666666; -fx-font-size: 14;"/>
                </HBox>
                <BarChart fx:id="gradeChart" legendVisible="false" animated="false" prefHeight="250"
                          style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-font-size: 10;">
                    <xAxis>
                        <CategoryAxis label="Courses" style="-fx-font-size: 10; -fx-tick-label-fill: #666666;"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Grade" lowerBound="0" upperBound="100" tickUnit="10" style="-fx-font-size: 10; -fx-tick-label-fill: #666666;"/>
                    </yAxis>
                </BarChart>
            </VBox>
        </StackPane>

        <!-- Academic Progress -->
        <StackPane style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 10;" prefWidth="200">
            <effect>
                <DropShadow color="#00000022" radius="5" spread="0.03"/>
            </effect>
            <VBox spacing="10" alignment="CENTER">
                <HBox alignment="CENTER" spacing="8">
                    <StackPane>
                        <Circle radius="15" style="-fx-fill: rgba(46, 204, 113, 0.15);"/>
                        <Text text="ðŸ“ˆ" style="-fx-font-size: 14;"/>
                    </StackPane>
                    <Label text="Academic Progress" style="-fx-font-weight: bold; -fx-text-fill: #666666; -fx-font-size: 14;"/>
                </HBox>
                <Slider fx:id="progressSlider" min="0" max="100" value="75" showTickMarks="true" showTickLabels="true"
                        majorTickUnit="20" minorTickCount="4" orientation="VERTICAL" prefHeight="200"
                        style="-fx-font-size: 10;"/>
                <Label fx:id="progressLabel" text="75% Complete" style="-fx-font-weight: bold; -fx-text-fill: #3498db; -fx-font-size: 14;"/>
            </VBox>
        </StackPane>
    </HBox>

    <!-- Footer -->
    <HBox alignment="CENTER" style="-fx-padding: 5;">
        <Label text="Â© 2024 University Management System" style="-fx-text-fill: #666666; -fx-font-size: 10;"/>
    </HBox>
</VBox>

