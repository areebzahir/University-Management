<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.chart.*?>

<VBox fx:id="gradesContainer" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.FinalProject.UMS.GradesController" spacing="10" style="-fx-background-color: #f5f5f5;">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Academic Transcript" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="returnButton" text="Return to Dashboard" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;" onAction="#handleReturnButton"/>
        <Button fx:id="printButton" text="Print Transcript" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;" onAction="#handlePrintButton"/>
    </HBox>

    <Separator/>

    <HBox spacing="20" alignment="CENTER_LEFT">
        <VBox spacing="5">
            <Label text="Select Term:" style="-fx-font-weight: bold;"/>
            <ComboBox fx:id="termComboBox" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-pref-width: 200;"/>
        </VBox>

        <VBox spacing="5">
            <Label fx:id="termDateLabel" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>
            <Label fx:id="termGPALabel" style="-fx-font-weight: bold; -fx-text-fill: #e74c3c; -fx-font-size: 14px;"/>
        </VBox>
    </HBox>

    <VBox spacing="5" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;">
        <Label text="Course Grades" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
        <TableView fx:id="gradesTable" style="-fx-background-color: transparent;">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </VBox>

    <HBox fx:id="chartContainer" spacing="20">
        <VBox spacing="5" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;" HBox.hgrow="ALWAYS">
            <Label text="Grade Distribution" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <BarChart fx:id="gradeChart" prefHeight="250" legendVisible="false">
                <xAxis>
                    <CategoryAxis label="Courses"/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="Grade" lowerBound="0" upperBound="100" tickUnit="10"/>
                </yAxis>
            </BarChart>
        </VBox>

        <VBox spacing="5" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;" alignment="CENTER" prefWidth="200">
            <Label text="Academic Progress" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <Slider fx:id="progressSlider" min="0" max="100" showTickMarks="true" showTickLabels="true" majorTickUnit="20" minorTickCount="4" orientation="VERTICAL" prefHeight="200"/>
            <Label fx:id="progressLabel" style="-fx-font-weight: bold; -fx-text-fill: #3498db;"/>
        </VBox>
    </HBox>
</VBox>